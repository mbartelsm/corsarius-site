---
import BaseLayout from "./Layout.astro";
import Date from "../components/Date.astro"

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="gif">
        <img width="300" height="259" alt="RaccoonNotesGif" src="/blog.webp" />
    </div>
    <h2 style="text-decoration:none;">{frontmatter.title}</h2>
    <ul class="badge__list">
        <li>
            <span class="badge badge--item">AUTHOR</span>{frontmatter.author}
        </li>
        <li>
            <span class="badge badge--item">PUBLISHED</span><Date date={frontmatter.pubDate} format="Do of MMMM, YYYY"></Date>
        </li>
    </ul>
    <slot />
</BaseLayout>
